{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-x86-debug",
      "displayName": "Windows x86 Debug",
      "inherits": "windows-base",
      "architecture": "Win32",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-x86-release",
      "displayName": "Windows x86 Release",
      "inherits": "windows-base",
      "architecture": "Win32",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-x64-debug",
      "displayName": "Windows x64 Debug",
      "inherits": "windows-base",
      "architecture": "x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-x64-release",
      "displayName": "Windows x64 Release",
      "inherits": "windows-base",
      "architecture": "x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows-native-only",
      "displayName": "Windows Native Only",
      "inherits": "windows-x86-release",
      "cacheVariables": {
        "BUILD_NATIVE_ONLY": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-x86-debug-build",
      "displayName": "Build Windows x86 Debug",
      "configurePreset": "windows-x86-debug",
      "configuration": "Debug"
    },
    {
      "name": "windows-x86-release-build",
      "displayName": "Build Windows x86 Release",
      "configurePreset": "windows-x86-release",
      "configuration": "Release"
    },
    {
      "name": "windows-x64-debug-build",
      "displayName": "Build Windows x64 Debug",
      "configurePreset": "windows-x64-debug",
      "configuration": "Debug"
    },
    {
      "name": "windows-x64-release-build",
      "displayName": "Build Windows x64 Release",
      "configurePreset": "windows-x64-release",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "windows-test",
      "displayName": "Test Windows",
      "configurePreset": "windows-x86-debug",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
