<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <PlatformTarget>x86</PlatformTarget>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <BaseOutputPath>..\..\Bot</BaseOutputPath>
    <!-- Output to same folder as Loader.dll (net8.0) -->
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
    <OutputPath>..\..\Bot\$(Configuration)\net8.0\</OutputPath>
    <!-- Generate runtimeconfig.json for native hosting -->
    <GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
    <!-- Enable native hosting -->
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <!-- Roll forward to latest patch/minor for flexibility -->
    <RollForward>LatestMinor</RollForward>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Fasm.NET" Version="1.70.3.2" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.Memory" Version="4.6.3" />
    <PackageReference Include="Vcpkg.Nuget" Version="1.5.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Console" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Exports\BotRunner\BotRunner.csproj" />
    <ProjectReference Include="..\..\Exports\WoWSharpClient\WoWSharpClient.csproj" />
    <ProjectReference Include="..\..\Exports\GameData.Core\GameData.Core.csproj" />
    <ProjectReference Include="..\..\Exports\BotCommLayer\BotCommLayer.csproj" />
    <ProjectReference Include="..\..\Exports\WinImports\WinProcessImports.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Fasm.NET.dll" />
    <Resource Include="Resources\FastCall.dll" />
  </ItemGroup>

  <!-- Remove items that might cause issues -->
  <ItemGroup>
    <Compile Remove="Frames\**\*.cs" />
    <Compile Remove="Mem\**\*.cs" />
    <Compile Remove="Objects\**\*.cs" />
    <Compile Remove="Statics\**\*.cs" />
  </ItemGroup>
</Project>
