<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <AssemblyName>ForegroundBotRunner</AssemblyName>
    <Platforms>x86</Platforms>
    <GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
    <TargetFramework>net8.0</TargetFramework>
  </PropertyGroup>

  <!-- Remove ALL items that might cause issues -->
  <ItemGroup>
    <Compile Remove="Program.cs" />
    <Compile Remove="ForegroundBotWorker.cs" />
    <Compile Remove="Loader.cs" />
    <Compile Remove="Frames\**\*.cs" />
    <Compile Remove="Mem\**\*.cs" />
    <Compile Remove="Objects\**\*.cs" />
    <Compile Remove="Statics\**\*.cs" />
  </ItemGroup>
</Project>
